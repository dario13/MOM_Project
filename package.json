{
  "name": "root",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "Frontend",
    "Backend"
  ],
  "scripts": {
    "build": "lerna run build --stream",
    "versionup": "lerna version --conventional-commits --yes && commit-version",
    "commit-version": "git add . && git commit -m \"chore(release): publish `node -p 'require(\"./lerna.json\").version'`\"",
    "postinstall": "husky install",
    "lint": "lerna run lint --stream --parallel && yarn format",
    "format": "npm-run-all format:*",
    "format:ts": "prettier --write \"**/*.ts{,x}\"",
    "format:json": "prettier --write \"**/*.json\""
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "husky": "^8.0.1",
    "lerna": "^5.1.4",
    "npm-run-all": "^4.1.5"
  },
  "version": "0.0.0"
}
